<resources>
    <!--Activity Themes-->

    <!-- Base application theme. -->
    <style name="Theme.Photon.BaseApp" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="iconTint">?android:textColorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="cameraFragmentBackground">@android:color/black</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="Theme.Photon.Splash" parent="Theme.Photon.BaseApp">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="Theme.Photon.SettingsActivity" parent="Theme.Photon.BaseApp">

    </style>

