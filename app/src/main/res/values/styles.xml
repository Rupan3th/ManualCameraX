    <!--Other Styles-->
    <style name="BoldTextWithShadow">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>
    <style name="TextWithShadow" parent="BoldTextWithShadow">
        <item name="android:textStyle">normal</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="AuxButtonText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="PreferenceActionBarStyle">
        <item name="titleTextAppearance">@style/SettingsTitleTextAppearance</item>
    </style>

    <style name="SettingsTitleTextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="dialogCornerRadius">8dp</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">?colorControlActivated</item>
        <item name="strokeColor">?colorControlActivated</item>
        <item name="strokeWidth">2dp</item>

    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">?colorControlActivated</item>
    </style>

</resources>
